<UserControl
    x:Class="App2.ClientControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer>
        <StackPanel Width="800" Margin="20">
            <Image x:Name="ClientImage" Height="200" Width="200" Stretch="Uniform" Tapped="ClientImage_Tapped"/>
            <Button Content="Selecionar Imagem" Click="SelectImage_Click" Margin="0,10,0,0"/>

            <TextBox x:Name="NameTextBox" PlaceholderText="Nome do Cliente" Margin="0,20,0,0"/>
            <TextBox x:Name="EmailTextBox" PlaceholderText="Email" Margin="0,10,0,0"/>
            <TextBox x:Name="EnderecoTextBox" PlaceholderText="Endereco" Margin="0,10,0,0"/>

            <CalendarDatePicker x:Name="DatePicker" Header="Data" Margin="0,10,0,0"/>

            <TextBox x:Name="DescriptionTextBox" PlaceholderText="Descricao" AcceptsReturn="True" TextWrapping="Wrap" Height="100" Margin="0,10,0,0"/>

            <Button Content="Salvar" Click="SaveButton_Click" HorizontalAlignment="Center" Margin="0,20,0,0"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
